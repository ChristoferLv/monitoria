{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C: gcc.exe build active file (MinGW)",
            "command": "C:\\MinGW\\bin\\gcc.exe", // Compilador C
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",      // Habilita mais avisos
                "-g",         // Gera informações de depuração
                "${file}",    // O arquivo ativo
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // Arquivo de saída
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false // Defina como true se C for seu padrão principal
            },
            "detail": "Compilador: C:\\MinGW\\bin\\gcc.exe"
        },
        {
            "type": "cppbuild",
            "label": "C++: g++.exe build active file (MinGW)",
            "command": "C:\\MinGW\\bin\\g++.exe", // Compilador C++
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",      // Habilita mais avisos
                "-g",         // Gera informações de depuração
                "-std=c++17", // Padrão C++ (ajuste conforme necessário, ex: c++11, c++14, c++20)
                "${file}",    // O arquivo ativo
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // Arquivo de saída
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc" // O problem matcher do gcc geralmente funciona bem para g++ também
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Defina como true se C++ for seu padrão principal
            },
            "detail": "Compilador: C:\\MinGW\\bin\\g++.exe"
        }
        // Você pode remover a tarefa cl.exe se não estiver usando o compilador MSVC
        // ou definir "isDefault": false para ela.
    ]
}